%global _lib lib
%global _libdir %{_prefix}/lib
%global debug_package %{nil}

Name: dataspacesync
Version: @VERSION@
Release: 1%{?dist}
Summary: A DataSpace Sync tool

Group: Applications/Internet
License: GPLv3
URL: http://graudata.com/
Source0: %{name}-%{version}.tar.bz2

BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)

BuildRequires: gtk-sharp2-devel mono-core mono-devel
BuildRequires: notify-sharp-devel
BuildRequires: libtool intltool desktop-file-utils

Requires: curl

%description
DataSpace Sync allows you to keep in sync with your CMIS repository.

More information is available at http://graudata.com/ .

%prep
%setup -q

%build
%configure
make

%install
rm -rf %{buildroot}
make install DESTDIR=%{buildroot}

rm -f %{buildroot}%{_libdir}/dataspace-sync/TestLibrary*
rm -f %{buildroot}%{_libdir}/dataspace-sync/Moq*
rm -f %{buildroot}%{_libdir}/dataspace-sync/nunit*

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root,-)
%{_bindir}/dataspace-sync
%{_libdir}/dataspace-sync/*.dll
%{_libdir}/dataspace-sync/*.exe
%{_libdir}/dataspace-sync/*.mdb
%{_datadir}/dataspace-sync
%{_datadir}/applications/*.desktop
%{_datadir}/icons/*

%changelog
* Mon Jun 10 2013 Fritz Elfert <fritz.elfert@graudata.com> @VERSION@-1
- initial rpm 
