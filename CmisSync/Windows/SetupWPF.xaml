        <Canvas x:Name="ContentCanvas" HorizontalAlignment="Left" Height="400" Margin="0,0,0,0" VerticalAlignment="Top" Width="620">
            <Image x:Name="SideSplash" Height="482" Canvas.Left="0" Width="150" RenderTransformOrigin="0.493,0.384" Canvas.Top="-82" VerticalAlignment="Top"/>
